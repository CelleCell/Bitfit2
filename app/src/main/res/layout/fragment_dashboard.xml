<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DashboardFragment">

    <!-- Average Calories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/averageCaloriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="Average Calories:"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/averageCaloriesTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="0"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Food with most calories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foodMostCaloriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="Largest Caloric Meal:"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/foodMostCaloriesTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="0"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Food with least calories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foodLeastCaloriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="Smallest Caloric Meal:"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/foodLeastCaloriesTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="0"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="end"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="Delete All Records"
        android:textColor="?android:textColor"
        android:layout_marginEnd="8dp"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"/>


</LinearLayout>
